<% layout("/layouts/boilerplate") %> 

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3"> 
                    <label for="title" class="form-label">Username</label>
                    <input
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control" 
                    required />
